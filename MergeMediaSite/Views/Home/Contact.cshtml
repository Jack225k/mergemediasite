@{
    ViewData["Title"] = "Contact";
}




<section id="contact">
    <!-- Material form contact -->
    <form method="POST" action="https://formspree.io/kotzecabo@gmail.com" class="container px-5 three mt-5 pb-2 pt-3">

        <p class="display-4 text-center mb-5">Contact Us</p>

        <!-- Material input text -->
        <div class="md-form">

            <i class="fa fa-user fa-2x pb-1 grey-text"></i>
            <input type="text" id="materialFormContactNameEx" placeholder="Your Name" class="form-control">

        </div>

        <!-- Material input email -->
        <div class="md-form pt-2">
            <i class="fa fa-envelope fa-2x pb-1 grey-text"></i>
            <input type="email" placeholder="Your Email Address" class="form-control">
        </div>

        <!-- Material input subject -->
        <div class="md-form pt-2">
            <i class="fa fa-tag prefix grey-text"></i>
            <label for="materialFormContactSubjectEx">Subject</label>
            <input type="text" id="materialFormContactSubjectEx" class="form-control">
        </div>

        <!-- Material textarea message -->
        <div class="md-form pt-2">
            <i class="fa fa-pencil prefix grey-text"></i>
            <label for="materialFormContactMessageEx">Your message</label>
            <textarea type="text" id="materialFormContactMessageEx" class="form-control md-textarea" rows="3"></textarea>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-outline-primary" type="submit">Send<i class="fa fa-paper-plane-o ml-2"></i></button>
        </div>
    </form>
    <!-- Material form contact -->
</section>

<section id="location">

    <div class="container">
        <p class="display-4 text-light">Find Us</p>
        <p class="lead text-light">39 Pioneer Road, Kloof, Durban</p>
        <div id="map"></div>
    </div>
</section>


<script src="~/js/maps.js"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDUaprX02-eJatOgKdpO-o41wTXKksonGQ&callback=initMap"></script>