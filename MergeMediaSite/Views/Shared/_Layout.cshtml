
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - Merge</title>

    <link href="~/assets/css/app.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <style>
        .loader {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: #F5F8FA;
            z-index: 9998;
            text-align: center;
        }

        .plane-container {
            position: absolute;
            top: 50%;
            left: 50%;
        }
    </style>

    <!--Start of Tawk.to Script-->
    <script type="text/javascript">
        var Tawk_API = Tawk_API || {}, Tawk_LoadStart = new Date();
        (function () {
            var s1 = document.createElement("script"), s0 = document.getElementsByTagName("script")[0];
            s1.async = true;
            s1.src = 'assets/js/chat.js';
            s1.charset = 'UTF-8';
            s1.setAttribute('crossorigin', '*');
            s0.parentNode.insertBefore(s1, s0);
        })();
    </script>
    <!--End of Tawk.to Script-->


</head>
<environment include="Development">
</environment>
<body>

    <!-- Pre loader -->
    <div id="loader" class="loader">
        <div class="plane-container">
            <div class="l-s-2 blink">LOADING</div>
        </div>
    </div>

    @*<div id="app" class="paper-loading">
        <div class="btn-fixed-top-left">
            <button type="button"
                    data-toggle="modal"
                    data-target="#modalChat"
                    class="btn-fab  btn-primary shadow1">
                <i class="icon icon-message"></i>
            </button>
        </div>

    </div>*@




    <div class="promotionsBar gradient responsive">
        <div class="container">
            <div class="promotionsMsg">
                <p>
                    We have new <span class="badge bg-danger">Microsoft Azure Based</span> Managed Cloud Hosting plans for as low as R99 p/m.
                </p> <a asp-action="Hosting" asp-controller="Home"
                        class="btn btn-line r-30 s-12">
                    Check It Out
                </a>
            </div>
        </div>
        <a href="#" class="paper-nav-toggle paper-nav-white active closePromotions"><i></i></a>
    </div>

    <div class="page">

        <div class="nav-sticky">
            <!-- partial:partials/_header.html -->
            <!-- partial -->

            @await Html.PartialAsync("_nav")

        </div>

        @RenderBody()


        @await Html.PartialAsync("_footer")
    </div>



    @*@await Html.PartialAsync("_chat")*@
    @await Html.PartialAsync("_Login")



    <script src="~/assets/js/app.js"></script>


    <script async
            defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDUaprX02-eJatOgKdpO-o41wTXKksonGQ">
    </script>



    @RenderSection("Scripts", required: false)
</body>
</html>


