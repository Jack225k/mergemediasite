
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - Merge</title>

    <link href="~/assets/css/app.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <style>
        .loader {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: #F5F8FA;
            z-index: 9998;
            text-align: center;
        }

        .plane-container {
            position: absolute;
            top: 50%;
            left: 50%;
        }
    </style>
</head>
<environment include="Development">
</environment>
<body>

    <!-- Pre loader -->
    <div id="loader" class="loader">
        <div class="plane-container">
            <div class="l-s-2 blink">LOADING</div>
        </div>
    </div>

    <div class="promotionsBar gradient responsive">
        <div class="container">
            <div class="promotionsMsg">
                <p>
                    We have new <span class="badge bg-danger">Microsoft Azure Based</span> Managed Cloud Hosting plans for as low as R99 p/m.
                </p> <a href="https://themeforest.net/item/paper-mulitipurpose-html-template/20382955"
                        class="btn btn-line r-30 s-12">
                    Check It Out
                </a>
            </div>
        </div>
        <a href="#" class="paper-nav-toggle paper-nav-white active closePromotions"><i></i></a>
    </div>

    <div class="page">

        <div class="nav-sticky">
            <!-- partial:partials/_header.html -->
            <!-- partial -->

            @await Html.PartialAsync("_nav")

        </div>

        @RenderBody()


        @await Html.PartialAsync("_footer")
    </div>




    <script src="~/assets/js/app.js"></script>

    <script src="~/js/maps.js"></script>
    <script async 
            defer 
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDUaprX02-eJatOgKdpO-o41wTXKksonGQ&callback=initMap">
    </script>



    @RenderSection("Scripts", required: false)
</body>
</html>


